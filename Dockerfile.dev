# Development container for React + Vite
FROM node:24-alpine

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy only package files first
COPY package.json pnpm-lock.yaml ./

# Install dependencies
RUN pnpm install

# Copy all project files (will be overridden by volume mount)
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Default command (can be overridden)
CMD ["pnpm", "dev"]